<h1>イベント新規登録</h1>

<div class="container">
  <%= form_with(model: @event, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "必須項目です" %>
    </div>
    <div class="form-group">
      <%= f.label :place %>
      <%= f.text_field :place, class: 'form-control', placeholder: "場所を入力してください（必須）" %>
    </div>
    <div class="form-group">
      <%= f.label :date %>
      <%= f.date_field :date, class: 'form-control', placeholder: "Please enter like => 2020-06-07" %>
    </div>
    <div class="form-group">
      <%= f.label :start_at %>
      <%= f.time_field :start_at, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :end_at %>
      <%= f.time_field :end_at, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :cost %>
      <%= f.text_field :cost, class: 'form-control', placeholder: "参加費を半角数字で入力してください（必須）" %>
    </div>
    <div class="form-group">
      <%= f.label :capacity %>
      <%= f.text_field :capacity, class: 'form-control', placeholder: "参加可能人数を半角数字で入力してください（必須）" %>
    </div>
    <div class="form-group">
      <%= f.label :meta %>
      <%= f.text_area :meta, class: 'form-control', placeholder: "備考欄" %>
    </div>

    <div class="my-5">
      <%= f.submit nil, class: 'btn btn-outline-primary' %>
    </div>
  <% end %>
</div>