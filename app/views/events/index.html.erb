<div class="container my-3">
  <div class="text-center index-event__title">
    <p>イベント一覧</p>
  </div>

  <div class="text-center my-3">
    <%= link_to 'イベント登録', new_event_path, class: 'button button-event' if current_user %>
  </div>
  <div class="index_events" >
    <% @events.each do |event| %>
      <div class="card img-thumbnail mx-auto caption">
        <% if event.image.url.presence %>
          <%= image_tag event.image.url, style: 'border: 1px solid lightgray' %>
        <% else %>
          <!-- 'no_image.png'は、assets/images内に配置 -->
          <%= image_tag 'no_image.png', style: 'border: 1px solid lightgray' %>
        <% end %>
        <div class="card-body">
          <p class="card-title"><%= event.name %></p>
          <p class="card-subtitle text-muted">開催日:<%= event.date %></p>
          <%= link_to '詳細', event_path(event), class: 'btn btn-primary btn-sm float-right' %>
        </div>
      </div>
    <% end %>
  </div>

    <div class="my-3">
      <%= paginate @events %>
      <%= page_entries_info @events %>
    </div>
</div>