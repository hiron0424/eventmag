<% if group.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(group.errors.count, "") %>件のエラーがあります。</h2>

    <ul>
    <% group.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="container my-3">
  <%= form_with(model: group, local: true, html: { role: 'form', :id => "group_form" }) do |f| %>
    <div class="form-group">
      <%= f.label :icon %>
      <%= f.file_field :icon, class: 'form-control-file' %>
    </div>

    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: 'form-control', placeholder: "チーム名を入力してください（必須）" %>
    </div>

    <div class="form-group">
      <%= f.label :summary %><br />
      <%= f.text_area :summary, class: 'form-control', placeholder: "グループ概要を入力してください（必須）" %>
    </div>

    <div class="my-5">
      <%= f.submit class: 'btn btn-outline-primary' %>
    </div>
  <% end %>
</div>